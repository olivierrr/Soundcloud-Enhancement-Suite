{
    "name": "Soundcloud Enhancement Suite",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Soundcloud Enhancement Suite adds new features to the Soundcloud website.",
    "icons": {
        "48": "img/icon.png"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Soundcloud Enhancement Suite"
    },

    "background": {
        "page": "html/background/background.html"
    },
    "options_page": "html/background/options.html",
    "permissions": [
        "identity",
        "storage",
        "tabs",
        "webRequest",
        "webNavigation",
        "webRequestBlocking",
        "https://*.soundcloud.com/*",
        "https://*.sndcdn.com/"
    ],
    "web_accessible_resources": [
        "js/*",
        "html/*",
        "css/*",
        "img/*"
    ],
    "content_scripts": [{
        "matches": ["https://soundcloud.com/stream"],
        "css": [
            "css/bootstrap.css",
            "css/style.css"
        ],
        "js": [
            // angular and ui-bootstrap
            "js/lib/angular/angular.js",
            "js/lib/bootstrap.js",
            "js/lib/ui-bootstrap-tpls-0.11.0.js",
            // waveform.js Library
            "js/lib/waveform.js",
            "js/lib/waveformer.js",
            // app
            "js/app/app.js",
            // controllers
            "js/app/controllers/modalInstanceController.js",
            "js/app/controllers/groupController.js",
            "js/app/controllers/streamController.js",
            // services
            "js/app/services/modal.js",
            "js/app/services/groups.js",
            "js/app/services/soundcloud.js",
            "js/app/services/streamService.js",
            "js/app/services/followingService.js",
            // directives
            "js/app/directives/streamItem.js",
            "js/app/directives/plangular.js",
            "js/app/directives/waveform.js",
            // content script
            "js/scripts/streamContent.js"
        ]
    }, {
        "matches": ["https://soundcloud.com/*/following"],
        "css": [
            "css/bootstrap.css",
            "css/style.css"
            ],
        "js": [
            "js/lib/angular/angular.js",
            "js/lib/ui-bootstrap-tpls-0.11.0.js",
            "js/lib/waveform.js",
            "js/app/app.js",
            "js/app/services/modal.js",
            "js/app/services/groups.js",
            "js/app/services/soundcloud.js",
            "js/app/services/streamService.js",
            // controllers
            "js/app/controllers/modalInstanceController.js",
            "js/app/controllers/followingController.js",
            "js/app/controllers/groupController.js",
            "js/app/controllers/streamController.js",
            "js/scripts/followingContent.js"
        ]
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
